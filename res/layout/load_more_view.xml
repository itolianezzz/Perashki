<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:id="@+id/load_more_view">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/load_more_label"
            android:id="@+id/load_more_text" android:layout_gravity="center" android:maxLines="4" android:minLines="4"
            android:visibility="visible"/>
    <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/load_more_progress" android:layout_gravity="center" android:indeterminate="true"
            android:visibility="gone"/>
</LinearLayout>